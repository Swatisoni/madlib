DROP TABLE IF EXISTS example_data_output_with_null_column, example_data_output_with_null_column_summary;
SELECT madlib.correlation( 'example_data',
                           'example_data_output_with_null_column',
                           'temperature, humidity, new_col'
                         );
SELECT * FROM example_data_output_with_null_column;

SELECT assert(ABS(a.temperature - b.temperature) < 0.000001,
       'Rows with NULL values are ignored.') 
	FROM 
		example_data_output a, 
		example_data_output_with_null_column b
	WHERE a.column_position = 2 and b.column_position = 2;
